{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "lib",
    "rootDir": "./"
  },
  "exclude": ["lib", "node_modules"],
  "include": ["src/**/*", "global.d.ts"]
}
